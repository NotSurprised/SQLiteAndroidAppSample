<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/volleyball_bg" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:orientation="horizontal"
			android:padding="0dp">
	        <Button
	            android:id="@+id/add_player1_1"
		        android:background="@drawable/activity_page_bottom"
		    	android:clickable="true"
		    	android:onClick="add_player"
		    	
	            android:layout_width="0dp"
	            android:layout_weight="1"
	        	android:layout_height="fill_parent"
	        	android:gravity="center"
	        	android:text="先發 1"
	        	android:textColor="#ffffff"
	        	android:textSize="25dp"
	        />
	        <Button
	            android:id="@+id/add_player1_2"
		        android:background="@drawable/activity_page_bottom"
		    	android:clickable="true"
		    	android:onClick="add_player"
	            
	            android:layout_width="0dp"
	            android:layout_weight="1"
	        	android:layout_height="fill_parent"
	        	android:gravity="center"
	        	android:text="先發 2"
	        	android:textColor="#ffffff"
	        	android:textSize="25dp"
	        />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical">
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:padding="5dp">
		        <Button
			        android:id="@+id/add_player2_1"
			        android:background="@drawable/activity_page_bottom"
			    	android:clickable="true"
			    	android:onClick="add_player"
		    	
		            android:layout_width="0dp"
		            android:layout_weight="1"
		        	android:layout_height="fill_parent"
		        	android:gravity="center"
		        	android:text="先發 3"
		        	android:textColor="#ffffff"
		        	android:textSize="25dp"
		        />
		        <Button
		            android:id="@+id/add_player2_2"
			        android:background="@drawable/activity_page_bottom"
			    	android:clickable="true"
			    	android:onClick="add_player"
			    	
		            android:layout_width="0dp"
		            android:layout_weight="1"
		        	android:layout_height="fill_parent"
		        	android:gravity="center"
		        	android:text="先發 4"
		        	android:textColor="#ffffff"
		        	android:textSize="25dp"
		        />
		    </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:orientation="vertical">
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:padding="0dp">
		        <Button
		            android:id="@+id/add_player3_1"
			        android:background="@drawable/activity_page_bottom"
			    	android:clickable="true"
			    	android:onClick="add_player"
		            
		            android:layout_width="0dp"
		            android:layout_weight="1"
		        	android:layout_height="fill_parent"
		        	android:gravity="center"
		        	android:text="先發 5"
		        	android:textColor="#ffffff"
		        	android:textSize="25dp"
		        />
		        <Button
		            android:id="@+id/add_player3_2"
			        android:background="@drawable/activity_page_bottom"
			    	android:clickable="true"
			    	android:onClick="add_player"
		            
		            android:layout_width="0dp"
		            android:layout_weight="1"
		        	android:layout_height="fill_parent"
		        	android:gravity="center"
		        	android:text="先發 6"
		        	android:textColor="#ffffff"
		        	android:textSize="25dp"
		        />
		    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="horizontal"
		android:padding="5dp">
	        <Button
	            android:id="@+id/add_player4_1"
			    android:background="@drawable/activity_page_bottom"
			    android:clickable="true"
			    android:onClick="add_player"
	            
	            android:layout_width="0dp"
	            android:layout_weight="1"
	        	android:layout_height="fill_parent"
	        	android:gravity="center"
	        	android:text="板凳 1"
	        	android:textColor="#ffffff"
	        	android:textSize="25dp"
	        />
	        <Button
	            android:id="@+id/add_player4_2"
			    android:background="@drawable/activity_page_bottom"
			    android:clickable="true"
			    android:onClick="add_player"
	            
	            android:layout_width="0dp"
	            android:layout_weight="1"
	        	android:layout_height="fill_parent"
	        	android:gravity="center"
	        	android:text="板凳 2"
	        	android:textColor="#ffffff"
	        	android:textSize="25dp"
	        />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal"
        android:background="@drawable/activity_pagebar_bg2"
        android:padding="0dp">
        <ImageButton
	    	android:id="@+id/backward_bottom2"
			android:background="@drawable/backicon"
			android:clickable="true"
			android:onClick="add_record"
	            
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:gravity="left"
	     />
		<TextView
	        android:layout_height="fill_parent"
			android:layout_width="0dp"  
			android:layout_weight="1"
			android:gravity="center"
		/>
		<ImageButton
	    	android:id="@+id/additional_list2"
			android:background="@drawable/listicon"
			android:clickable="true"
			android:onClick="add_record"
	            
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	     />
		<TextView
	        android:layout_height="fill_parent"
			android:layout_width="0dp"  
			android:layout_weight="1"
			android:gravity="center"
		/>
		<ImageButton
	    	android:id="@+id/finish_bottom2"
			android:background="@drawable/finicon"
			android:clickable="true"
			android:onClick="add_record"
	            
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:gravity="right"
	     />
    </LinearLayout>
</LinearLayout>